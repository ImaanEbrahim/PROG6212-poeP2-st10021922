<Window x:Class="CMCS_APP2._0.ViewStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claim Status" Height="300" Width="400">
    <Grid>
        <DataGrid x:Name="statusDataGrid" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" />
                <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
