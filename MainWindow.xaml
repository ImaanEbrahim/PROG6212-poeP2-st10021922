<Window x:Class="CMCS_APP2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LectraClaim" Height="350" Width="525"
        Background="#1E3A82" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="LectraClaim System" 
                   Foreground="White" FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Margin="0,20,0,0" />

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <Button Content="Submit a Claim" Style="{StaticResource ModernButton}" Margin="0,10,0,0" Click="SubmitClaim_Click"/>
            <Button Content="Approve Claims" Style="{StaticResource ModernButton}" Margin="0,10,0,0" Click="ApproveClaims_Click"/>
            <Button Content="View Claim Status" Style="{StaticResource ModernButton}" Margin="0,10,0,0" Click="ViewStatus_Click"/>
        </StackPanel>
    </Grid>
</Window>

